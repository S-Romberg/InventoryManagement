<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>
<GridPane fx:controller="Controllers.PartController" stylesheets="/Views/styling.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" prefWidth="800">
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="100"
                           maxWidth="Infinity" >
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>
    <Label text="Inventory Management System" GridPane.columnIndex="0"
           GridPane.rowIndex="0" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial" size="18" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>


    <GridPane GridPane.columnIndex="0"
          GridPane.rowIndex="1" GridPane.columnSpan="2"
          GridPane.rowSpan="20"  styleClass="border" alignment="center">
        <Label text="Parts" GridPane.rowIndex="2"/>
        <TableView prefHeight="200" prefWidth="350" GridPane.rowIndex="4">
            <columns>
                <TableColumn text="Part ID" />
                <TableColumn text="Part Name" />
                <TableColumn text="Inventory Level" />
                <TableColumn text="Price/Cost per Unit" />
            </columns>
        </TableView>
    </GridPane>

    <GridPane GridPane.columnIndex="2"
          GridPane.rowIndex="1" GridPane.columnSpan="2"
          GridPane.rowSpan="20"  styleClass="border" alignment="center">
        <Label text="Products"/>
        <TableView prefHeight="200" prefWidth="350"  GridPane.rowIndex="4" >
            <columns>
                <TableColumn text="Product ID" />
                <TableColumn text="Product Name" />
                <TableColumn text="Inventory Level" />
                <TableColumn text="Price/Cost per Unit" />
            </columns>
        </TableView>
    </GridPane>


</GridPane>